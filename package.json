{
  "name": "boa-vida-fish-forecast",
  "version": "1.0.0",
  "description": "A data-driven fishing analytics tool for Bazaruto waters that predicts optimal fishing conditions based on historical catch data, environmental factors, and machine learning algorithms.",
  "main": "src/index.html",
  "homepage": "https://henriken.github.io/boa-vida-fish-forecast",
  "repository": {
    "type": "git",
    "url": "https://github.com/henriken/boa-vida-fish-forecast.git"
  },
  "keywords": [
    "fishing",
    "analytics",
    "bazaruto",
    "data-science",
    "marine-biology",
    "predictive-modeling",
    "react",
    "data-visualization"
  ],
  "author": {
    "name": "Henrik",
    "email": "henrik@example.com"
  },
  "license": "MIT",
  "scripts": {
    "dev": "live-server src --port=3000 --open=/index.html",
    "build": "npm run build:optimize && npm run build:minify",
    "build:optimize": "node scripts/optimize-assets.js",
    "build:minify": "node scripts/minify-html.js",
    "deploy": "npm run build && gh-pages -d dist",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "playwright test",
    "lint": "eslint src --ext .js,.html",
    "lint:fix": "eslint src --ext .js,.html --fix",
    "format": "prettier --write \"src/**/*.{js,html,css,md}\"",
    "validate": "npm run lint && npm run test",
    "prepare": "husky install",
    "analyze": "node scripts/analyze-data.js",
    "docs": "jsdoc src -d docs/api",
    "serve:docs": "live-server docs --port=3001"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-html": "^7.1.0",
    "gh-pages": "^6.1.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jsdoc": "^4.0.2",
    "lint-staged": "^15.2.0",
    "live-server": "^1.2.2",
    "prettier": "^3.1.1"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "papaparse": "^5.4.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "lint-staged": {
    "*.{js,html}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,md}": [
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/vendor/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
